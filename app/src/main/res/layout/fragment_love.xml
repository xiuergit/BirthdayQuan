<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhangxiu.birthdayquan.Love.Fragment.LoveFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            >
            <android.support.v4.view.ViewPager
                android:background="#aaddff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/vp_love_head"
                >

            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:id="@+id/ll_point_buttons">
            </LinearLayout>
        </FrameLayout>
      
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"

            android:id="@+id/love_content_list"></android.support.v7.widget.RecyclerView>


    </LinearLayout>

</FrameLayout>
