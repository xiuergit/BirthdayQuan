<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_love_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.zhangxiu.birthdayquan.Love.LoveDetailsActivity">

    <com.example.zhangxiu.birthdayquan.Widget.NavigationBar
        android:id="@+id/love_nav"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_below="@id/love_nav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <ViewSwitcher
        android:id="@+id/vs_detailsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </ViewSwitcher>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_detailsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</FrameLayout>

</RelativeLayout>
