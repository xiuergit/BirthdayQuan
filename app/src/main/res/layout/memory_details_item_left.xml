<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_marginLeft="19dp"
        android:layout_gravity="left"
        android:id="@+id/memory_ceter_line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AA2200"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/umeng_socialize_follow_on"/>

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/ll_memory_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_memory_left"
                android:layout_margin="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_memory_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"/>
            <TextView
                android:id="@+id/tv_memory_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年10月20日"
                android:gravity="center"
                />


        </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/tv_memory_address_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点"
        android:layout_gravity="center_vertical|right"/>


</FrameLayout>